choice=-1
while choice != 3:
    print("1.Add two numbers")
    print("2.Sub two numbers")
    print("3.Exit")

    choice=int(input("Enter your choice:"))
    if choice==1 :
        a=int(input("Enter first number:"))
        b=int(input("Enter second number:"))
        c=a+b
        print("Result:",c)

    elif choice==2 :
        a=int(input("Enter first number:"))
        b=int(input("Enter second number:"))
        c=a-b
        print("Result:",c)
